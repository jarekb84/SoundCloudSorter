{
	"name": "SoundCloud Sorter",
	"version": "0.3.4",
	"manifest_version" : 2,
	"description": "Add sorting to SoundCloud lists.",
	"page_action" :
	{
		"default_icon": {
			"19": "img/icons/19.png",
			"38": "img/icons/38.png"
		},
		"default_title" : "SAMPLE_TITLE",
		"default_popup" : "fragments/popup.html"
	},
	"content_scripts": [
	{
		"matches": ["*://*.soundcloud.com/*"],
		"js": ["lib/jquery-2.0.3.min.js","lib/lodash.min.js","scripts/main.js"],
		"css": ["css/styles.css"],
		"run_at": "document_idle"
	}
	],
	"icons": {
		"16": "img/icons/16.png",
		"48": "img/icons/48.png",
		"128": "img/icons/128.png"
	},
	"options_page" : "fancy-settings/source/index.html"
}
